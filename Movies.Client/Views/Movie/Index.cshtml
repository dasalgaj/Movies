@model IEnumerable<Movies.Client.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container mt-5">
    <form asp-action="Search" method="get" class="p-4 border rounded col-sm-6">
        <div class="form-group">
            <label for="searchString">Search</label>
            <input type="text" class="form-control" id="searchString" name="searchString" placeholder="Enter search term">
        </div>

        <div class="form-group">
            <label for="orderBy">Order by</label>
            <select class="form-control" id="orderBy" name="orderBy">
                <option value="">--</option>
                <option value="title asc">Title A-Z</option>
                <option value="title desc">Title Z-A</option>
                <option value="genre asc">Genre A-Z</option>
                <option value="genre desc">Genre Z-A</option>
                <option value="releaseyear asc">Release Year (Oldest first)</option>
                <option value="releaseyear desc">Release Year (Newest first)</option>
            </select>
        </div>

        <div class="form-group">
            <label for="per_page">Items per page</label>
            <select class="form-control" id="per_page" name="per_page">
                <option value="">--</option>
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
            </select>
        </div>

        <div class="form-group">
            <label for="page">Page</label>
            <input type="number" class="form-control" id="page" name="page" value="1" min="1">
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
